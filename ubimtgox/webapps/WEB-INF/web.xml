<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>mongodb-webapp</display-name>
	
<!-- JSPC servlet mappings start -->

    <servlet>
        <servlet-name>org.apache.jsp.page.admin_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.admin_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.contact_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.contact_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.erreur_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.erreur_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.index_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.index_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.login_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.login_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.market_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.market_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.notifications_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.notifications_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.robots_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.robots_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.security_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.security_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.page.Wallet_jsp</servlet-name>
        <servlet-class>org.apache.jsp.page.Wallet_jsp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.admin_jsp</servlet-name>
        <url-pattern>/page/admin.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.contact_jsp</servlet-name>
        <url-pattern>/page/contact.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.erreur_jsp</servlet-name>
        <url-pattern>/page/erreur.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.index_jsp</servlet-name>
        <url-pattern>/page/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.login_jsp</servlet-name>
        <url-pattern>/page/login.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.market_jsp</servlet-name>
        <url-pattern>/page/market.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.notifications_jsp</servlet-name>
        <url-pattern>/page/notifications.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.robots_jsp</servlet-name>
        <url-pattern>/page/robots.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.security_jsp</servlet-name>
        <url-pattern>/page/security.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.page.Wallet_jsp</servlet-name>
        <url-pattern>/page/Wallet.jsp</url-pattern>
    </servlet-mapping>

<!-- JSPC servlet mappings end -->

	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
		</servlet-class>
		<init-param>
			<param-name>jaxrs.serviceClasses</param-name>
			<param-value>
				com.mongodb.jee.webapps.jaxrs.JaxrsProductsService
			</param-value>
		</init-param>
		<init-param>
			<param-name>jaxrs.providers</param-name>
			<param-value>
				com.mongodb.jee.jaxrs.providers.DBObjectIterableProvider,
				com.mongodb.jee.jaxrs.providers.BSONObjectProvider,
				com.mongodb.jee.jaxrs.providers.PageResultProvider
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/jaxrs/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>com.mongodb.jee.servlet.MongoServletContextListener
		</listener-class>
	</listener>

	<context-param>
		<param-name>mongoURI</param-name>
		<param-value>mongodb://root:root@localhost:45017/ubiquisense</param-value>
	</context-param>
	
 
 	<welcome-file-list>
		<welcome-file>page/index.jsp</welcome-file> 
	</welcome-file-list>
</web-app> 
  
